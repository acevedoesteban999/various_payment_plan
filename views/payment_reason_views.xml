<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_payment_reason_tree" model="ir.ui.view">
        <field name="name">view.payment.reason.tree</field>
        <field name="model">payment.reason</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="account_id" />
            </tree>
        </field>
    </record>

    <record id="view_payment_reason_form" model="ir.ui.view">
        <field name="name">view.payment.reason.form</field>
        <field name="model">payment.reason</field>
        <field name="arch" type="xml">
            <form string="Payment Reason">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group name="info" string="Info">
                        <group>
                            <field name="account_id"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_payment_reason_search" model="ir.ui.view">
        <field name="name">view.payment.reason.search</field>
        <field name="model">payment.reason</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_payment_reason" model="ir.actions.act_window">
        <field name="name">Payment Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.reason</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Payment Reason.
            </p>
        </field>
    </record>

</odoo>
