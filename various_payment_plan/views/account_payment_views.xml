<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">view.account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_method_line_id']" position="after">
                <field name="is_various_payment" invisible="payment_type != 'outbound'" />
                <field name="payment_reason_id" invisible="payment_type != 'outbound' or not is_various_payment"  required="is_various_payment"/>
            </xpath>
        </field>
    </record>

    <record id="action_recalcule_move_id_payable_account" model="ir.actions.server">
        <field name="name">Recalcule Payment Reason</field>
        <field name="model_id" ref="model_account_payment"/>
        <field name="binding_model_id" ref="model_account_payment"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_set_move_id_payable_account()
        </field>
    </record>

</odoo>